#include <stdio.h>

int main() {
    char ForC;
    double inF;
    double outF;
    double inC;
    double outC;
    printf("~~Fahrenheit and celsius converter~~\n");
    printf("Directory:\n1. Enter 'F' to convert fahrenheit to celsius\n2. Enter 'C' to convert celsius to fahrenheit\nEnter option (F or C) here: ");
    scanf("%c",&ForC);
    if (ForC='F') {
        printf("Enter fahrenheit value: ");
        scanf("%lf",&inF);
        outC=(5.0/9.0)*(inF-32);
        printf("Converted output: %lf°C",outC);
        return 0;
    };
    if (ForC='C')  {
        printf("Enter celsius value: ");
        scanf("%lf",&inC);
        outF=(9.0/5.0)*(inC)+32;
        printf("Converted output: %lf°F", outF);
        return 0;
    } else {
    printf("Invalid.");
    return 1;
    };
    return 0;
}
