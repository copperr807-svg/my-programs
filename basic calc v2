#include <stdio.h>
//i made this repository after i made calc v1, which was pretty much the same as this except you couldnt pick you own operator

int main() {
    double num1;
    double num2;
    char op;
    
    printf("~~Simple calculator V2~~\n\n\n");
    printf("Enter first number: \n");
    scanf("%lf",&num1);
    printf("Enter operator (+, -, *, or /): \n");
    scanf(" %c",&op);
    printf("Enter second number: \n");
    scanf("%lf",&num2);
    
    if (op=='+') {
        printf("Output: %f",num1+num2);
    } else if (op=='-') {
        printf("Output: %f",num1-num2);
    } else if (op=='*') {
        printf("Output: %f",num1*num2);
    } else if (op=='/') {
        printf("Output: %f",num1/num2);
    };    
    return 0;
}        
